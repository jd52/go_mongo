<!DOCTYPE html>
<html lang="en">

{{template "header"}}

<style>
    nav li a:hover:not(.queryActive) {
    background-color: #111;
}

nav .queryActive {
    background-color: #4CAF50;
}
</style>

<body>

<div id="query">
    <main>
        <h2>Search</h2>
         <form method="POST" action="/query">
            <div id="queryDevice">
            <input type="text" name="hostname" placeholder="Find Hostname" onkeyup="instantQuery(this.value)">
            <input type="text" name="ipAddress" placeholder="Find IP Address">
            <input type="text" name="deviceType" placeholder="Find Type">
            <input type="radio" name="anyOr" value="or" checked> Match Any
            <input type="radio" name="anyOr" value="and"> Match All
            </div>
            <input type="submit" value="Search">

            
        </form>
        <div id="queryResponse">
        <h1>Routers</h1>
        <table>
        <tr>
            <th>Hostname</th>
            <th>IP Address</th>
            <th>Device Type</th>
        </tr>
            {{range .}}
                {{if (eq .DeviceType "router")}}
                    <tr>
                    <td>{{.Hostname}}</td>
                    <td>{{.IPAddress}}</td>
                    <td>{{.DeviceType}}</td>
                    </tr>
                {{end}}
            {{end}}
        </table>
        <h1>Switches</h1>
        <table>
        <tr>
            <th>Hostname</th>
            <th>IP Address</th>
            <th>Device Type</th>
        </tr>
            {{range .}}
                {{if (eq .DeviceType "switch")}}
                    <tr>
                    <td>{{.Hostname}}</td>
                    <td>{{.IPAddress}}</td>
                    <td>{{.DeviceType}}</td>
                    </tr>
                {{end}}
            {{end}}
        </table>
    </div>
    </main>
</div>
    <script>
        function instantQuery(str) {
        var xhttp;
        if (str.length == 0) { 
            document.getElementById("txtHint").innerHTML = "";
            return;
        }
        xhttp = new XMLHttpRequest();
        xhttp.responseText = str
        xhttp.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("queryResponse").innerHTML = this.responseText;
            }
        };
        xhttp.open("POST", "/query", true);
        xhttp.setRequestHeader("Content-type", "application/x-www-form-urlencoded")
        xhttp.send("hostname="+str);
        }
    </script>
</body>
</html>
