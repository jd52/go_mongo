<!DOCTYPE html>
<html lang="en">

{{template "header"}}

<style>
    nav li a:hover:not(.queryActive) {
    background-color: #111;
}

nav .queryActive {
    background-color: rgb(51, 116, 52);
}
</style>

<body>

<div id="query">
    <main>
        <h2>Search</h2>
         <form method="POST" action="/query">
            <div id="queryDevice">
            <input type="text" name="hostname" id="fHostname" placeholder="Find Hostname" onkeyup="instantHNQuery(this.value)">
            <input type="text" name="ipAddress" id="fipAddress" placeholder="Find IP Address" onkeyup="instantIPAQuery(this.value)">
            <input type="text" name="deviceType" id="fDevicetype" placeholder="Find Type" onkeyup="instantDTQuery(this.value)">
            <input type="radio" name="anyOr" value="or" checked> Match Any
            <input type="radio" name="anyOr" value="and"> Match All
            </div>
            <input type="submit" value="Search">

            
        </form>
        <div id="queryResponse">
        <h1>Routers</h1>
        <table>
        <tr>
            <th>Hostname</th>
            <th>IP Address</th>
            <th>Device Type</th>
        </tr>
            {{range .}}
                {{if (eq .DeviceType "router")}}
                    <tr>
                    <td>{{.Hostname}}</td>
                    <td>{{.IPAddress}}</td>
                    <td>{{.DeviceType}}</td>
                    </tr>
                {{end}}
            {{end}}
        </table>
        <h1>Switches</h1>
        <table>
        <tr>
            <th>Hostname</th>
            <th>IP Address</th>
            <th>Device Type</th>
        </tr>
            {{range .}}
                {{if (eq .DeviceType "switch")}}
                    <tr>
                    <td>{{.Hostname}}</td>
                    <td>{{.IPAddress}}</td>
                    <td>{{.DeviceType}}</td>
                    </tr>
                {{end}}
            {{end}}
        </table>
    </div>
    </main>
</div>
    <script>
        function instantDTQuery(DT) {

        var xhttpDT;
        if (DT.length == 0) { 
        document.getElementById("txtHint").innerHTML = "";
        return;
        }
        xhttpDT = new XMLHttpRequest();
        xhttpDT.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("queryResponse").innerHTML = this.responseText;
            }
        };
        xhttpDT.open("POST", "/queryresponse", true);
        xhttpDT.setRequestHeader("Content-type", "application/x-www-form-urlencoded")
        
        xhttpDT.send("deviceType="+DT);
        }

        function instantIPAQuery(IPA) {

        var xhttpIPA;
        if (IPA.length == 0) { 
        document.getElementById("txtHint").innerHTML = "";
        return;
        }
        xhttpIPA = new XMLHttpRequest();
        xhttpIPA.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("queryResponse").innerHTML = this.responseText;
            }
        };
        xhttpIPA.open("POST", "/queryresponse", true);
        xhttpIPA.setRequestHeader("Content-type", "application/x-www-form-urlencoded")
        
        xhttpIPA.send("ipAddress="+IPA);
        }
        
        function instantHNQuery(HN) {

        var xhttpHN;
        if (HN.length == 0) { 
        document.getElementById("txtHint").innerHTML = "";
        return;
        }
        xhttpHN = new XMLHttpRequest();
        xhttpHN.onreadystatechange = function() {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById("queryResponse").innerHTML = this.responseText;
            }
        };
        xhttpHN.open("POST", "/queryresponse", true);
        xhttpHN.setRequestHeader("Content-type", "application/x-www-form-urlencoded")
        
        xhttpHN.send("hostname="+HN);
        }
    </script>
</body>
</html>
